<configs>

	<append xpath="//traders">

		<!-- Player Owned Store that works like a Vending Machine -->
		<trader_info id="99" reset_interval="-1" override_buy_markup="1.0" override_sell_markup="1.0" allow_sell="false" player_owned="true"/>
		
	</append>

	<!-- Adding a new trade tier -->
	<!--
	<setattribute xpath="//trader_info[@id='2']/tier_items[@level='5000,-1']" name="level">5000,5999</setattribute>

	<append xpath="//trader_info[@id='2']">
		<tier_items level="6000,-1" count="all"> 
			<item name="bookSmelterITAV" count="2" />
		</tier_items>
	</append> 
	  -->
	<append xpath="//trader_item_group[@name='traderAlways']">
		<item name="qb_MySecondProfessionITAV" count="10" />
	</append>
	
	<remove xpath="//trader_info[@id='4']" />
	
	<append xpath="/traders">
		<trader_info id="4" full_reset="false" reset_interval="1" override_buy_markup="1.0" allow_sell="false" min_inventory="10" max_inventory="20" min_items_swapped="6" max_items_swapped="13">
		<trader_items count="10">
			<item name="bookSmelterITAV" />
			<item name="bookMinerITAV" />
			<item name="bookHunterITAV" />
			<item name="bookCookITAV" />
		</trader_items>
	</trader_info>
	
	
	</append>
	
	<!-- Removing food/drink and GyroCopter parts/schematics from trader item groups -->
	<remove xpath="traders/trader_item_groups/trader_item_group[@name='farmingCookingRecipes']/item" />
	<append xpath="traders/trader_item_groups/trader_item_group[@name='farmingCookingRecipes']">
		<item name="resourcePaper" />
	</append>
	<remove xpath="//item[(contains(@name, 'vehicleGyroCopter'))]"/>
  
</configs>

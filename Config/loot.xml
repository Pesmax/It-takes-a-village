<configs>

<!-- Replacing loot group food schematics with pieces of paper to make Cook more viable-->
<remove xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT0']/item" />
<append xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT0']">
	<item name="resourcePaper" />
</append>
<remove xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT1']/item" />
<append xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT1']">
	<item name="resourcePaper" />
</append>
<remove xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT2']/item" />
<append xpath="/lootcontainers/lootgroup[@name='farmingCookingRecipesT2']">
	<item name="resourcePaper" />
</append>

<!-- Removing/Replacing GyroCopter -->
<setattribute xpath="//lootgroup[@name='gyroCopterParts']/item[@name='vehicleGyroCopterChassis']" name="name">vehicle4x4TruckChassis</setattribute>
<setattribute xpath="//lootgroup[@name='gyroCopterParts']/item[@name='vehicleGyroCopterAccessories']" name="name">vehicle4x4TruckAccessories</setattribute>
<remove xpath="//lootcontainer[@name='vehicleGyrocopter']"/>
<remove xpath="//lootgroup[@name='schematicsVehiclesT2']/item[(@name='vehicleGyroCopterChassisSchematic' or @name='vehicleGyroCopterAccessoriesSchematic')]"/>
<remove xpath="//lootgroup[@name='groupQuestGyrocopterParts']" />

</configs>
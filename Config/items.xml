<configs>

<!-- Removing GyroCopter -->
<remove xpath="//item[@name='questRewardGyrocopterPartsBundle']" />
<remove xpath="//item[(contains(@name, 'vehicleGyroCopter') or contains(@name, 'vehicleGyrocopter'))]"/>


<!-- Increase stacksizes of expected store items -->
<setattribute xpath="/items/item[(starts-with(@name, 'drink') or starts-with(@name, 'food'))]/property[@name='Stacknumber']" name="value">500</setattribute>
<setattribute xpath="/items/item[starts-with(@name, 'drug')]/property[@name='Stacknumber']" name="value">500</setattribute>
<setattribute xpath="/items/item[starts-with(@name, 'ammo') and not(starts-with(@name, 'ammoBundle')) and not(starts-with(@name, 'ammoGasCan'))]/property[@name='Stacknumber']" name="value">600</setattribute>


<!-- Adding small chance of dysentery to canned foods -->
<append xpath="//item[@name='foodCanBeef']/effect_group[@name='Food Tier 0']">
		<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar=".DiseaseRoll" operation="set" value="2"/><display_value name="dDysenteryRisk" value=".02"/>
		<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar=".DiseaseRoll" operation="add" value="@$MetabolismResist"/>
		<triggered_effect trigger="onSelfPrimaryActionEnd" action="AddBuff" buff="buffDysenteryCatchFood">
				<requirement name="RandomRoll" seed_type="Random" min_max="1,100" operation="LTE" value="@.DiseaseRoll"/>
		</triggered_effect>
</append>

<!-- Locking forged items behind smelter perk -->
<append xpath="//item[@name='resourceForgedIron']">
	<property name="UnlockedBy" value="perkSmelterITAV"/>
</append>
<append xpath="//item[@name='resourceForgedSteel']">

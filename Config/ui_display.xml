<configs>

<append xpath="/ui_display_info/item_display">
	<item_display_info display_type="workBootsITAV" display_group="groupAttire" >
		<display_entry name="dStaminaRegen" title_key="statStaminaRegenITAV" display_type="Percent" display_leading_plus="true"/>
	</item_display_info>

	<item_display_info display_type="powerizersITAV" display_group="groupAttire" >
		<display_entry name="dRunSpeed" title_key="statRunSpeedITAV" display_type="Percent" display_leading_plus="true"/>
		<display_entry name="dStaminaChangeOT" title_key="statStaminaReductionITAV" display_type="Percent" display_leading_plus="true"/>
	</item_display_info>
	
	<item_display_info display_type="foodChickenSoupSpicyITAV" display_group="groupConsumables">
		<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
		<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
		<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus"/>
		<display_entry name="dFortitude" title_key="statShowFortitude" display_leading_plus="true"/>
		<display_entry name="dHypothermalResist" title_key="statHypothermalResist" display_leading_plus="true"/>
		<display_entry name="dDuration" title_key="statDuration" display_type="Time"/>
	</item_display_info>
</append>

<append xpath="/ui_display_info/crafting_category_display">

	<crafting_category_list display_type="campfireDecoITAV">
		<crafting_category name="" icon="ui_game_symbol_fork" display_name="lblAll" />
	</crafting_category_list>
	
	<crafting_category_list display_type="cntWoodBurningStoveDecoITAV">
		<crafting_category name="" icon="ui_game_symbol_fork" display_name="lblAll" />
	</crafting_category_list>

	<crafting_category_list display_type="workbenchMinerT2ITAV">
		<crafting_category name="" icon="ui_game_symbol_tool" display_name="lblAll" />
	</crafting_category_list>

	<crafting_category_list display_type="campfireT2ITAV">
		<crafting_category name="" icon="ui_game_symbol_spatula" display_name="lblAll" />
		<crafting_category name="CFFood/Cooking" icon="ui_game_symbol_fork" display_name="lblCategoryFood" />
		<crafting_category name="CFDrink/Cooking" icon="ui_game_symbol_thirst" display_name="lblCategoryDrink" />
		<crafting_category name="CFChemicals" icon="ui_game_symbol_chemistry" display_name="lblCategoryChemicals" />
	</crafting_category_list>	
	
	
	<crafting_category_list display_type="chemistryStationT2ITAV">
		<crafting_category name="" icon="ui_game_symbol_science" display_name="lblAll" />
	</crafting_category_list>
	
	<crafting_category_list display_type="workbenchRoboticsT2ITAV">
		<crafting_category name="" icon="ui_game_symbol_assemble" display_name="lblAll" />
	</crafting_category_list>
	
	<crafting_category_list display_type="workbenchRunnerT2ITAV">
		<crafting_category name="" icon="ui_game_symbol_4x4" display_name="lblAll" />
	</crafting_category_list>

	<crafting_category_list display_type="workbenchDecoratorT1ITAV">
		<crafting_category name="" icon="ui_game_symbol_table_saw" display_name="lblAll" />
	</crafting_category_list>
	
	
	<crafting_category_list display_type="workbenchFarmerT1ITAV">
		<crafting_category name="" icon="ui_game_symbol_crops" display_name="lblAll" />
	</crafting_category_list>
	
</append>

<!-- Tweaking Pumpkin Cheesecake to give beer buff instead of bartering -->
<remove xpath="//item_display_info[@display_type='foodPumpkinCheesecake']/display_entry[@name='dBartering']" />
<append xpath="//item_display_info[@display_type='foodPumpkinCheesecake']">
	<display_entry name="dStaminaRegen" title_key="statStaminaRegen" display_type="Percent" display_leading_plus="true"/>
	<display_entry name="dEntityDamageBrawling" title_key="statEntityDamageBrawling" display_type="Percent" display_leading_plus="true"/>
	<display_entry name="dStunResist" title_key="statStunResist" display_type="Percent" display_leading_plus="true"/>
</append>

</configs>
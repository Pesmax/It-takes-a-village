<configs>

<!-- Changing what items a player starts with (first spawns in with) -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvival']/@value">drinkJarBoiledWater,foodCanChili,medicalFirstAidBandage,meleeToolTorch,keystoneBlock,resourceScrapIron,resourceScrapPolymers,resourceBrokenGlass,resourceDuctTape</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvivalSP']/@value">drinkJarBoiledWater,foodCanChili,medicalFirstAidBandage,meleeToolTorch,keystoneBlock,resourceScrapIron,resourceScrapPolymers,resourceBrokenGlass,resourceDuctTape</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='ItemsOnEnterGame.GameModeSurvivalMP']/@value">drinkJarBoiledWater,foodCanChili,medicalFirstAidBandage,meleeToolTorch,keystoneBlock,resourceScrapIron,resourceScrapPolymers,resourceBrokenGlass,resourceDuctTape</set> 
	
	
<append xpath="/entity_classes/entity_class[@name='playerMale']">
	<effect_group name="Base Effects">
			<triggered_effect trigger="onSelfFirstSpawn" action="ModifyCVar" cvar="numberOfProfessionsKnown" operation="set" value="0" />
			<triggered_effect trigger="onSelfFirstSpawn" action="ModifyCVar" cvar="numberOfProfessionsAllowed" operation="set" value="1"/>
	</effect_group>
</append>


<remove xpath="//entity_class[@name='vehicleGyrocopter']"/>

<append xpath="//entity_class[@name='animalChicken']">
    <drop event="Harvest" name="foodEgg" tag="butcherHarvest" count="1"/>
</append>

<!-- Tagging zombie bear so it can proc buff for hunter -->
<append xpath="//entity_class[@name='animalZombieBear']/property[@name='Tags']/@value">,entityITAV</append>

</configs>
<configs>

	<!-- Creating block "Player Owned Store" (based on vending machine, looks like a cash register) -->
<append xpath="/blocks">

	<block name="cntVendingMachineITAV">
		<property name="Extends" value="cntCashRegister" />
		<property name="TraderID" value="99"/>
		<property name="CustomIcon" value="cntCashRegister"/>
		<property name="Class" value="VendingMachine"/>
		<property name="DescriptionKey" value="cntVendingMachineGroupDescITAV"/>
		<property name="DisplayInfo" value="Name"/>
		<property name="OnlySimpleRotations" value="true"/>
		<property name="Material" value="MmetalNoGlue"/>
		<!-- Collide disabled to avoid zombies killing the store, or using store as protective block against zombies -->
		<property name="Collide" value="sight"/> 
		<property name="CanPickup" value="true"/>
		<property name="EconomicValue" value=".1"/>
		<property class="RepairItems">
			<property name="resourceScrapIron" value="1"/>
		</property>			
	</block>

</append>

<append xpath="/blocks">

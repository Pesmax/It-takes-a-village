<configs>

	<!-- Creating block "Player Owned Store" (based on vending machine, looks like a cash register) -->
<append xpath="/blocks">

	<block name="cntVendingMachineITAV">
		<property name="Extends" value="cntCashRegister" />
		<property name="TraderID" value="99"/>
		<property name="Class" value="VendingMachine"/>
		<property name="DescriptionKey" value="cntVendingMachineGroupDescITAV"/>
		<property name="DisplayInfo" value="Name"/>
		<property name="OnlySimpleRotations" value="true"/>
		<property name="Material" value="MmetalNoGlue"/>
		<!-- Collide disabled to avoid zombies killing the store, or using store as protective block against zombies -->
		<property name="Collide" value="sight"/> 
		<property name="CanPickup" value="true"/>
		<property name="EconomicValue" value=".1"/>
		<property class="RepairItems">
			<property name="resourceScrapIron" value="1"/>
		</property>			
	</block>

</append>

<!-- Testing making chandelier always lit -->
<!-- <setattribute xpath="//block[@name='chandelierLight']" name="value">""</setattribute>
<append xpath="//block[@name='chandelierLight']"><property name="Extends" value="porchLight01"></property></append> -->

<append xpath="/blocks">
	<block name="lanternLight_playerITAV">
		<property name="Extends" value="ceilingLight01_player" param1="HandleFace"/> <!-- porchLight01-->
		<property name="Class" value=""/>
		<property name="CreativeMode" value="Player"/>
		<property name="CanPickup" value="true"/>
		<property name="CustomIcon" value="lanternDecorLight"/>
		<property name="UnlockedBy" value="perkArtOfMiningLantern"/>
		<property name="Material" value="Mglass"/>
		<property name="Shape" value="ModelEntity"/>
		<property name="Model" value="Entities/Lighting/chandelierPrefab"/>
		<property name="MultiBlockDim" value="3,2,3"/>
		<property name="DisplayType" value="blockMulti"/>
		<property name="OnlySimpleRotations" value="true"/>
		<property name="Path" value="solid"/>
		<property name="StabilitySupport" value="false"/> <!-- build restriction -->
		<property name="Group" value="Science,Building,advBuilding"/>
		<property name="FilterTags" value="MC_playerBlocks,SC_electrical"/>
		<!-- None of these three have any effect when Class="" -->
		<property name="RuntimeSwitch" value="true"/>
		<property name="TakeDelay" value="10"/>
		<property name="Light" value="0.2"/>
	</block>
</append>

<append xpath="//block[@name='forge']">
	<property name="UnlockedBy" value="perkSmelterITAV"/>
</append>
<append xpath="//block[@name='workbench']">
	<property name="UnlockedBy" value="perkSmelterITAV"/>
</append>
	
	<!-- Making blocks unlockable by the correct ITAV perk -->
<setattribute xpath="/blocks/block/property[contains(@value, 'perkAdvancedEngineering')]" name="value">perkSmelterITAV</setattribute>

	
</configs>

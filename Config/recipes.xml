<configs>
	
	<append xpath="/recipes">
		
		<!--Add player vending machine recipe -->
		<recipe name="cntVendingMachineITAV" count="1" craft_area="workbench" craft_time="3">
			<ingredient name="resourceBrokenGlass" count="2" />
			<ingredient name="resourceScrapIron" count="30" />
			<ingredient name="resourceDuctTape" count="1" />
			<ingredient name="resourceRockSmall" count="1" />
			<ingredient name="resourceScrapPolymers" count="4" />
		</recipe>

	
	
		<!-- Add crushed car wall recipe -->
		<recipe name="crushedCars" count="1" craft_area="workbench">
			<ingredient name="carBattery" count="1"/>
		</recipe>
	
	</append>
	
	<!-- Changing Forged iron and steel to be locked behind perk -->
	<setattribute xpath="//recipe[@name='resourceForgedIron']" name="tags">learnable,perkSmelterITAV</setattribute>
	<setattribute xpath="//recipe[@name='resourceForgedSteel']" name="tags">learnable,perkSmelterITAV</setattribute>
	

</configs>

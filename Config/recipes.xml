<configs>
	
	<append xpath="/recipes">
		
		<!--Add player vending machine recipe -->
		<recipe name="cntVendingMachineITAV" count="1" craft_time="3">
			<ingredient name="resourceBrokenGlass" count="1" />
			<ingredient name="resourceScrapIron" count="1" />
			<ingredient name="resourceDuctTape" count="1" />
			<ingredient name="resourceRockSmall" count="1" />
			<ingredient name="resourceScrapPolymers" count="1" />
		</recipe>
		
		<!-- Baseball cap mod -->
		<recipe name="modArmorBallCap" count="1" craft_area="workbench" tags="learnable,workbenchCrafting">
			<ingredient name="resourceCloth" count="10"/>
			<ingredient name="resourceScrapPolymers" count="2"/>
			<ingredient name="resourceDuctTape" count="2"/>
			<ingredient name="resourceSewingKit" count="1"/>
		</recipe>

	
	
		<!-- Add crushed car wall recipe -->
		<recipe name="crushedCars" count="1" craft_area="workbench">
			<ingredient name="carBattery" count="1"/>
		</recipe>
	
	</append>
	
	<!-- Removing GyroCopter -->
	<remove xpath="//recipe[contains(@name, 'vehicleGyroCopter') or contains(@name, 'vehicleGyrocopter')]" />
	
	<!-- Because all armor is now craftable, the stealth boots need to be made more expensive to craft, as it is available at the same time as regular military boots -->
	<setattribute xpath="recipes/recipe[@name='armorMilitaryStealthBoots']/ingredient[@name='armorMilitarySetParts']" name="count">6</setattribute>
	
	<!-- Changing Forged iron and steel to be locked behind perk -->
	<setattribute xpath="//recipe[@name='resourceForgedIron']" name="tags">learnable,perkSmelterITAV</setattribute>
	<setattribute xpath="//recipe[@name='resourceForgedSteel']" name="tags">learnable,perkSmelterITAV</setattribute>
	
	<!-- Updating recipes to being tagged with ITAV on top of old perks -->
	<append xpath="/recipes/recipe[contains(@tags, 'perkAdvancedEngineering')]/@tags">,perkSmelterITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkMiner69r')]/@tags">,perkMinerITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkMasterChef')]/@tags">,perkCookITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkLightArmor') or contains(@tags, 'perkHeavyArmor')]/@tags">,perkArmorerITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkMachineGunner')]/@tags">,perkWeaponsmithITAV</append>
	<!-- <append xpath="/recipes/recipe[contains(@tags, 'perkAutoWeaponsMachineGuns')]/@tags">,perkWeaponsmithITAV</append> -->
	<append xpath="/recipes/recipe[contains(@tags, 'perkBoomstick')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkDeadEye')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkGunslinger')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkArchery')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkJavelinMaster')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkPummelPete')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkSkullCrusher')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkBrawler')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkDeepCuts')]/@tags">,perkWeaponsmithITAV</append>
	<append xpath="/recipes/recipe[contains(@tags, 'perkElectrocutioner')]/@tags">,perkWeaponsmithITAV</append>

</configs>

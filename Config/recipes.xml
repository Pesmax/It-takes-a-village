		</recipe>
	
	</append>
	
	<!-- Tweaking recipes -->
	<setattribute xpath="//recipe[@name='foodBaconAndEggs']/ingredient[@name='foodEgg']" name="count">1</setattribute>
	
	<!-- Removing GyroCopter -->
	<remove xpath="//recipe[contains(@name, 'vehicleGyroCopter') or contains(@name, 'vehicleGyrocopter')]" />
	
	<!-- Because all armor is now craftable, the stealth boots need to be made more expensive to craft, as it is available at the same time as regular military boots -->
	<setattribute xpath="recipes/recipe[@name='armorMilitaryStealthBoots']/ingredient[@name='armorMilitarySetParts']" name="count">6</setattribute>
	

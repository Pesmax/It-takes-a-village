<configs>
	<append xpath="/items">
		<!-- New steel pipe -->
		<item name="resourceSteelPipeMFM">
			<!-- <property name="CustomIcon" value="resourceMetalPipe" />
			<property name="CustomIconTint" value="4571ad" /> -->
			<property name="HoldType" value="45"/>
			<property name="Meshfile" value="#Other/Items?Misc/sackPrefab.prefab"/>
			<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
			<property name="Material" value="MresourceMetalPipe"/>
			<property name="Stacknumber" value="500"/> <!-- STK resource -->
			<property name="EconomicValue" value="12"/>
			<property name="Group" value="Resources"/>
			<property name="RepairTime" value="1"/>
			<property name="RepairAmount" value="800"/>
			<property name="UnlockedBy" value="resourceSteelPipeMFMSchematic" />
		</item>
		
		<item name="resourceSteelPipeMFMSchematic">
			<property name="Extends" value="schematicMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="resourceSteelPipeMFM"/>
			<property name="Unlocks" value="resourceSteelPipeMFM"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="resourceSteelPipeMFM" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>
		
		<item name="solarCellMFMSchematic">
			<property name="Extends" value="schematicMaster"/>
			<property name="CreativeMode" value="Player"/>
			<property name="CustomIcon" value="solarCell"/>
			<property name="Unlocks" value="solarCell"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="ModifyCVar" cvar="solarCell" operation="set" value="1"/>
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="GiveExp" exp="50"/>
			</effect_group>
		</item>
		
		
	</append>
	
	<!-- Makes the solar cell require a schematic to unlock -->
	<append xpath="//item[@name='solarCell']">
		<property name="UnlockedBy" value="solarCellMFMSchematic" />
	</append>



	<!-- Make an item usable as fuel in a forge -->
	<append xpath="/items/item[@name='resourceRockSmall']">
		<property name="FuelValue" value="50"/>
	</append>


	<!-- Change stackable amount of water -->
	<setattribute xpath="/items/item[@name='drinkJarBoiledWater']/property[@name='Stacknumber']" name="value">500</setattribute>

	<!-- Change stackable amount of all nodes starting with the word 'drink','food' or 'ammo' (excluding ammobundles and gascans)-->
	<setattribute xpath="/items/item[(starts-with(@name,'drink') or starts-with(@name,'food') or starts-with(@name,'ammo')) and not(starts-with(@name,'ammoBundle')) and not(starts-with(@name,'ammoGasCan'))]/property[@name='Stacknumber']" name="value">500</setattribute>
	
		
		
	<!-- Make handgun not sellable to traders -->
	<append xpath="/items/item[@name='gunHandgunT1Pistol']">
		<property name="SellableToTrader" value="false" />
	</append>

	<!-- Make all guns not sellable to traders -->
	<append xpath="/items/item[(starts-with(@name,'gun')) and not(starts-with(@name,'gunTool')) and not(contains(@name,'Schematic'))]">
		<property name="SellableToTrader" value="false" />
	</append>

	<!-- Make scrap iron, lead and brass melt faster in the forge. -->
	<append xpath="/items/item[@name='resourceScrapIron' or @name='resourceScrapLead']">
		<property name="MeltTimePerUnit" value=".4" />
	</append>
	
	<setattribute xpath="/items/item/property[@name='MeltTimePerUnit']" name="value">0.1</setattribute>

	<!-- If you only want it to target scrap metal resources instead of everything with a melt time property, use this one instead -->
	<!-- /items/item[starts-with(@name,'resourceScrap') and not(contains((@name, 'Bundle'))] -->
	
	<!-- The long way of removing dysentry from all food items -->
	<!-- <remove xpath="/items/item[starts-with(@name,food)]/effect_group/triggered_effect[@buff='buffDysenteryCatchFood']" /> -->
	
	<!-- Short way, targets the triggered effect instantly. The first one makes sure the item has the food poisoning debuff, before then removing the diseaseroll effect (because same roll is also on some drinks) -->
	<!-- 
	<remove xpath="//effect_group[triggered_effect[@buff='buffDysenteryCatchFood']]/triggered_effect[@cvar='.DiseaseRoll']" />
	<remove xpath="//triggered_effect[@buff='buffDysenteryCatchFood']" />
	<remove xpath="//display_value[@name='dDysenteryRisk']" /> 
	-->
	
	<!-- If you want to keep the food poisoning debuff on ex. rotten flesh and Sham sandwhich you can exclude them like so -->
	<remove xpath="//item[not(@name='foodRottingFlesh' or @name='foodShamSandwich')]/effect_group[triggered_effect[@buff='buffDysenteryCatchFood']]/triggered_effect[@cvar='.DiseaseRoll']" />
	<remove xpath="//item[not(@name='foodRottingFlesh' or @name='foodShamSandwich')]/effect_group/triggered_effect[@buff='buffDysenteryCatchFood']" />
	<remove xpath="//item[not(@name='foodRottingFlesh' or @name='foodShamSandwich')]/effect_group/display_value[@name='dDysenteryRisk']" />
	
	
	<!-- Remove ability to repair an AK47 -->
	<remove xpath="//item[@name='gunMGT1AK47']/property[@name='RepairTools']" />
	
	
	
	
	
	
</configs>
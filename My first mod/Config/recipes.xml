<configs>


<append xpath="/recipes">
	<!-- Add a new recipe, craftable only on a workbench -->
	<recipe name="resourceAcid" count="3" craft_area="workbench">
		<ingredient name="carBattery" count="1"/>
		
	</recipe>
	
	<!--Add a solar cell recipe to the forge, and make it require a crucible. -->
	<recipe name="solarCell" count="1" material_based="true" craft_area="forge" craft_tool="toolForgeCrucible" craft_time="300" tags="learnable">
		<ingredient name="unit_glass" count="200" />
		<ingredient name="unit_lead" count="500" />
		<ingredient name="unit_iron" count="100" />
		<ingredient name="unit_clay" count="50" />
	</recipe>
	
	<!-- Add custom steel pipe recipe! -->
	<recipe name="resourceSteelPipeMFM" count="1" material_based="true" craft_area="forge" craft_tool="toolForgeCrucible" craft_time="12" tags="learnable">
		<ingredient name="unit_iron" count="30" />
		<ingredient name="unit_clay" count="15" />
	
	</recipe>
	

</append>
<!-- Add an ingredient to one or more recipes-->
<append xpath="/recipes/recipe[
@name='sectionalLeatherCouchSofaBlockVariantHelper' 
or @name='sectionalPlaidCouchSofaBlockVariantHelper']">
	<ingredient name="resourceCropCottonPlant" count="10" />
</append>



<!-- Remove an ingredient from a recipe-->
<remove xpath="/recipes/recipe[@name='resourceConcreteMix']/ingredient[@name='resourceCrushedSand']" />



<!-- Remove an attribute (need for a workbench) or tag (Learnable etc) from a recipe-->
<removeattribute xpath="/recipes/recipe[@name='resourceForgedIron']/@craft_area" />

<removeattribute xpath="/recipes/recipe[@name='resourceMilitaryFiber']/@tags" />


<!-- Makes backpack gunpowder craftable in the campfire instead. -->
<setattribute xpath="/recipes/recipe[@name='resourceGunPowder' and not(@craft_area)]" name="craft_area">campfire</setattribute>

<!-- Adds beaker req to recipe of gunpowder in campfire. -->
<setattribute xpath="/recipes/recipe[@name='resourceGunPowder' and @craft_area='campfire']" name="craft_tool">toolBeaker</setattribute>


<!-- Make the baseball bat craftable in the forge instead of in the backpack-->
<setattribute xpath="/recipes/recipe[@name='meleeWpnClubT1BaseballBat']" name="craft_area">forge</setattribute>
<setattribute xpath="/recipes/recipe[@name='meleeWpnClubT1BaseballBat']" name="material_based">true</setattribute>


<remove xpath="/recipes/recipe[@name='meleeWpnClubT1BaseballBat']/ingredient" />
<remove xpath="/recipes/recipe[@name='meleeWpnClubT1BaseballBat']/effect_group" />
<!-- Removing all children from the parent node using a wildcard *
<remove xpath="/recipes/recipe[@name='meleeWpnClubT1BaseballBat']/effect_group" /> 
-->

<append xpath="/recipes/recipe[@name='meleeWpnClubT1BaseballBat']">
	<ingredient name="unit_iron" count="50" />
	<ingredient name="unit_lead" count="10" />
	<ingredient name="unit_clay" count="20" />
</append>

<!-- Adding crushedCar wall to the game as a recipe -->
<append xpath="/recipes">
	<recipe name="crushedCars" count="1" craft_area="workbench">
		<ingredient name="carBattery" count="1"/>
	</recipe>
</append>
	





</configs>